auth {
  mode: bearer
}

auth:bearer {
  token: {{accessToken}}
}

script:post-response {
  if(res.status === 200){
    if(req.url === `${ bru.getEnvVar('url') }/api/v1/auth/login`){
      bru.setEnvVar('accessToken', res.body.data.accessToken);
      bru.setEnvVar('refreshToken', res.body.data.refreshToken);
    }
  }
}
